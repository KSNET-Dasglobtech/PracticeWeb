@model DateTime?
<input class="form-control" id="@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)" name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToShortDateString() : null)" />
<script>
    $(document).ready(function () {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoDatePicker();
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").data("kendoDatePicker").wrapper.width("100%");
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoMaskedTextBox({
            mask: "99/99/9999"
        });
    });
</script>